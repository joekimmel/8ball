<% content_for :javascript_includes do %>
  <%= javascript_include_tag "shake.js", async: true %>
<% end %>

<div class="outer">
  <div class="middle">
    <div class="inner" id="radial-center">
      <div class="container-fluid">
        <div class="row-fluid">
          &nbsp;
        </div>
        <div class="row-fluid">
          <div class="col-md-6 col-md-offset-3">
            <%= form_tag(
              @form_url, 
              method: :get, 
              id: "shakeForm",
              class: "form-horizontal center"
            ) do %>
              <%= select_tag(
                "answer_type", 
                options_for_select(@form.answer_types, @answer_type)
              ) %>
              <%= submit_tag "Shake", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>

        <div class="row-fluid">
          <div class="wrapper span12">
            <div class="triangle-wrapper">
              <div class="answer-triangle shake shake-slow dampshake damp-shake-harlem">
                <div>
                  <%= link_to(
                    @answers_list.sample, 
                    ball_shake_path, 
                    class: "ball-answer", 
                    onClick: "$('#shakeForm').submit()"
                  )%>
                </div>
              </div>
            </div>

            <div class="graphic"></div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "custom_shake_handler.js", async: true %>
